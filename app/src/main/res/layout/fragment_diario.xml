<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDiarioMes"
        android:textSize="43sp"
        android:padding="32sp"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/meubotao">

        <TextView
            android:id="@+id/tvDiarioResumo"
            android:text="Seus gastos totais: R$ 0.00"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:layout_marginStart="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp">

            <EditText
                android:id="@+id/etDiarioNome"
                android:hint="Cadastrar"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                android:layout_marginStart="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etDiarioValor"
                android:hint="valor"
                android:layout_weight="1"
                android:textSize="20sp"
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btDiarioSalvar"
                android:text="Salvar"
                android:layout_marginRight="10sp"
                android:layout_marginEnd="10sp"
                android:textColor="@color/white"
                android:background="@drawable/meubotao_outline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <ListView
            android:id="@+id/lvDiarioContas"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</LinearLayout>